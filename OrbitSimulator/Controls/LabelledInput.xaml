<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrbitSimulator.Controls.LabelledInput">
    <ContentView.Content>
        <StackLayout Orientation="Vertical">
            <Label x:Name="lbl_InputLabel" VerticalTextAlignment="Center"/>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="entry_Input" TextChanged="OnTextChanged" VerticalOptions="Center" />
                <Label x:Name="lbl_Units" VerticalTextAlignment="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>