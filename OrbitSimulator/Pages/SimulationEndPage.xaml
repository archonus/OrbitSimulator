<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrbitSimulator.Pages.SimulationEndPage"
             Title="Results">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label x:Name="lbl_Main"
                HorizontalOptions="Center"
                FontSize="Medium"
                Padding="10"
                LineBreakMode="WordWrap"/>
            <Button x:Name="btn_Restart" Text="Start Again" Clicked="btn_Restart_Clicked" HorizontalOptions="Center" BackgroundColor="LightGray"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>